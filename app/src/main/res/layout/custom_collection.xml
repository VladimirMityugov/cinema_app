<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/custom_layout"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border"
        >

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_custom_collection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:button="@drawable/checkbox_background" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/selection_title_text_style"
            android:id="@+id/custom_collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="65dp"
            android:layout_alignStart="@+id/checkbox_custom_collection"
            android:text="@string/custom_collection" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/number_in_custom_collection"
            style="@style/selection_title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp"
            android:text="4" />

    </RelativeLayout>

</FrameLayout>