<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/onboarding_screen_layout"
    tools:context=".ui.onboarding.OnboardingSingleFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_screen_picture"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/onboarding_screen_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/onboarding_screen_picture"
        android:text="@string/onboarding_text"
        android:textAppearance="@style/onboarding_text_style"
        android:gravity="top"
        />

</RelativeLayout>